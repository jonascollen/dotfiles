        {
            "command": "paste",
            "keys": "ctrl+v"
        },
        // Press Ctrl+Shift+F to open the search box
        {
            "command": "find",
            "keys": "ctrl+shift+f"
        },
        // Terminal keybinds
        {
            "command": 
            {
                "action": "sendInput",
                "input": "<something>\n"
            },
            "keys": "f1"
        },
        {
            "command": 
            {
                "action": "sendInput",
                "input": "<something>\n"
            },
            "keys": "f2"
        },
        {
            "command": 
            {
                "action": "sendInput",
                "input": "<something>\n"
            },
            "keys": "f3"
        },
        {
            "command": "duplicateTab",
            "keys": "ctrl+shift+d"
        },
        {
			// Workaround for aborting a telnet/console session towards Cisco-device (ctrl-shift-6)
            "command": 
            {
                "action": "sendInput",
                "input": "\u001e"
            },
            "keys": "f5"
        },
        {
            "command": "duplicateTab",
            "keys": "ctrl+shift+d"
        },
        // Press Alt+Shift+D to open a new pane.
        // - "split": "auto" makes this pane open in the direction that provides the most surface area.
        // - "splitMode": "duplicate" makes the new pane use the focused pane's profile.
        // To learn more about panes, visit https://aka.ms/terminal-panes
        {
            "command": 
            {
                "action": "splitPane",
                "split": "auto",
                "splitMode": "duplicate"
            },
            "keys": "alt+shift+d"
        }
    ],
